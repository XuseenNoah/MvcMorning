@model IEnumerable<MvcMorning.Models.Person>

@{
    ViewBag.Title = "ListPersons";
}

<h2>ListPersons</h2>
<div class="row">
    @if (TempData["SuccesfullySaved"] != null)
    {
        <div class="col-md-4">
            <h3 class="alert alert-success">Succesfully Saved</h3>
        </div>
    }
    @if (TempData["SuccesfullyDeleted"] != null)
    {
        <div class="col-md-4">
            <h3 class="alert alert-success">Succesfully Deleted</h3>
        </div>
    }
    @if (TempData["SuccesfullyUpdated"] != null)
    {
        <div class="col-md-4">
            <h3 class="alert alert-success">Succesfully Updated</h3>
        </div>
    }
</div>
<form method="get">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-3">
                <input type="text" class="form-control" name="personName" placeholder="Search Name" @*value="@Request.QueryString["personName"]"*@ />
            </div>

            <div class="col-md-2">
              <button type="submit" class="btn btn-primary" ><span class="glyphicon glyphicon-search"></span> Search</button>
            </div>
        </div>
    </div>
</form>
<br />
    <p>
        @Html.ActionLink("Create New", "CreatePersons",null,new { @class = "btn btn-primary btn-xs" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Addres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.ActionLink("-", "UpdatePerson", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit btn btn-warning btn-xs" }) |
                    @Html.ActionLink("-", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-search btn btn-success btn-xs" }) |
                    @Html.ActionLink("-", "DeletePerson", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash btn btn-danger btn-xs" })
                </td>
            </tr>
        }

    </table>
