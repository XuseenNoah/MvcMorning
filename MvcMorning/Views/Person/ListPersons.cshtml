@model IEnumerable<MvcMorning.Models.Person>

@{
    ViewBag.Title = "ListPersons";
}

<h2>ListPersons <a href="~/Person/DetailPerson"><span class="glyphicon glyphicon-plus"></span></a></h2>

<p>
    @Html.ActionLink("Create New", "CreatePerson")
</p>
@if (Model.Count() == 0)
{
<center> <h2 class="alert alert-danger">There is no data in this table</h2></center>
}
else
{
<table class="table table-bordered table-striped table-hover">
    <tr  class="alert alert-warning">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Addres)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr class="alert alert-danger">
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Addres)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
}
