@model IEnumerable<MvcMorning.Models.Person>

@{
    ViewBag.Title = "ListPersons";
}

<h2>ListPersons</h2>
<div class="row">
    @if (TempData["SuccesfullySaved"] != null)
    {
        <div class="col-md-4">
            <h3 class="alert alert-success">Succesfully Saved</h3>
        </div>
    }
</div>
    <p>
        @Html.ActionLink("Create New", "CreatePersons",null,new { @class = "btn btn-primary btn-xs" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Addres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.ActionLink("-", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit btn btn-warning btn-xs" }) |
                    @Html.ActionLink("-", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-search btn btn-success btn-xs" }) |
                    @Html.ActionLink("-", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash btn btn-danger btn-xs" })
                </td>
            </tr>
        }

    </table>
